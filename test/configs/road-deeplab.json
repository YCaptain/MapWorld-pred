{
    "name": "Road-Deeplab",
    "n_gpu": 1,
    "log_config": "src/logger/logger_config.json",
    "arch": {
         "type": "UNet",
         "args": {
             "n_channels": 3,
             "n_classes": 2
         }
    },
    "data_loader": {
        "type": "SpaceNetDataLoader",
        "args":{
            "data_type": "road",
            "data_name": [
                "AOI_2_Vegas",
                "AOI_3_Paris",
                "AOI_4_Shanghai",
                "AOI_5_Khartoum"
            ],
            "data_dir": "data/FYPData/spacenet/roads",
            "batch_size": 10,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4,
            "scales": [0.25],
            "crop_size": 325
        }
    },
    "loss": {
        "type": "SegmentationLosses",
        "args": {
            "mode": "ce",
            "ignore_index": 255
        }
    },
    "metrics": [
        {
            "type": "SegEvaluator",
            "args": {
                "num_class": 2
            }
        }
    ],
    "optimizer": {
        "type": "SGD",
        "weight_decay": 5.0e-4,
        "momentum": 0.9,
        "lr": 0.001
    },
    "lr_scheduler": {
        "type": "PolynomialLR",
        "args": {
            "step_size": 10,
            "iter_max": 20000,
            "power": 0.9
        }
    },
    "trainer": {
        "type": "DeeplabTrainer",
        "args": {},
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 20,
        "verbosity": 2,
        "monitor": "max val_mIoU",
        "early_stop": 20,
        "tensorboard": false
    },
    "tester": {
        "postprocessor": {
            "type": "DenseCRF",
            "args": {
                "iter_max": 10,
                "pos_w": 3,
                "pos_xy_std": 1,
                "bi_w": 4,
                "bi_xy_std": 67,
                "bi_rgb_std": 3,
                "n_jobs": 8
            }
        },
        "save_logits": true,
        "crop_size": 325
    }
}