{
    "name": "DeepLabTest",
    "n_gpu": 1,
    "log_config": "src/logger/logger_config.json",
    "arch": {
         "type": "DeepLab",
         "args": {
             "num_classes": 3,
             "backbone": "mobilenet"
         }
    },
    "data_loader": {
        "type": "SpaceNetDataLoader",
        "args":{
            "data_name": "AOI_3_Paris_Train",
            "data_dir": "data/FYPData/spacenet",
            "batch_size": 5,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4,
            "colors": [
                {"ignore": [0, 0, 0]},
                {"building": [255, 0, 0]},
                {"road": [0, 0, 255]}
            ],
            "scales": [0.5, 0.75, 1.0, 1.25, 1.5]
        }
    },
    "loss": {
        "type": "SegmentationLosses",
        "args": {
            "mode": "ce",
            "ignore_index": 255
        }
    },
    "metrics": [
        "seg_scores"
    ],
    "optimizer": {
        "type": "SGD",
        "weight_decay": 5.0e-4,
        "momentum": 0.9,
        "lr": 0.001
    },
    "lr_scheduler": {
        "type": "PolynomialLR",
        "args": {
            "step_size": 10,
            "iter_max": 20000,
            "power": 0.9
        }
    },
    "trainer": {
        "type": "DeeplabTrainer",
        "args": {},
        "epochs": 1034,
        "save_dir": "saved/",
        "save_period": 500,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": false
    }
}