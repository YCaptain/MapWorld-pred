{
    "name": "Building-Deeplab",
    "n_gpu": 1,
    "log_config": "src/logger/logger_config.json",
    "save_dir": "saved/",
    "arch": {
         "type": "DeepLab",
         "args": {
             "num_classes": 2,
             "backbone": "xception"
         }
    },
    "data_loader": {
        "type": "SpaceNetDataLoader",
        "args":{
            "data_type": "building",
            "data_name": [
                "AOI_2_Vegas_Train",
                "AOI_3_Paris_Train",
                "AOI_4_Shanghai_Train",
                "AOI_5_Khartoum_Train"
            ],
            "data_dir": "data/FYPData/spacenet/buildings",
            "batch_size": 6,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4,
            "scales": [0.75, 1.0, 1.25, 1.5],
            "crop_size": 650
        }
    },
    "loss": {
        "type": "SegmentationLosses",
        "args": {
            "mode": "ce",
            "ignore_index": 255
        }
    },
    "metrics": [
        {
            "type": "SegEvaluator",
            "args": {
                "num_class": 2
            }
        }
    ],
    "optimizer": {
        "type": "SGD",
        "args": {
            "weight_decay": 5.0e-4,
            "lr": 0.007,
            "momentum": 0.9
        }
    },
    "lr_scheduler": {
        "type": "PolynomialLR",
        "args": {
            "step_size": 10,
            "iter_max": 20000,
            "power": 0.9
        }
    },
    "trainer": {
        "type": "DeeplabTrainer",
        "args": {},
        "epochs": 300,
        "save_period": 20,
        "verbosity": 2,
        "monitor": "max val_mIoU",
        "early_stop": 20,
        "tensorboard": false
    },
    "tester": {
        "postprocessor": {
            "type": "DenseCRF",
            "args": {
                "iter_max": 10,
                "pos_w": 3,
                "pos_xy_std": 1,
                "bi_w": 4,
                "bi_xy_std": 67,
                "bi_rgb_std": 3,
                "n_jobs": 8
            }
        },
        "save_logits": true,
        "crop_size": 650
    }
}